{% extends 'base.html.twig' %}

{% block title %}Suppimer l'article{% endblock %}

{% block body %}
    <h3 class="text-center my-5">Vous souhaitez supprimer l'article :  {{ article.title }}</h3>

    <form class="text-center" method="post" action="{{ path('delete_article', {'slug': article.slug }) }}" onsubmit="return confirm('Etes-vous sûr de vouloir supprimer cet article ? Cette action est irréversible');">
        <input type="hidden" name="token" value="{{ csrf_token('delete' ~ article.slug) }}">
        <button class="btn btn-danger">Supprimer</button>
    </form>
       
{% endblock %}


    
